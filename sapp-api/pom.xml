    <artifactId>sapp-api</artifactId>
    <description>This provides custom APIs on top of what is provided by spring data</description>
    <dependencies>
        <dependency>
            <groupId>com.mmrath.sapp</groupId>
            <artifactId>sapp-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.mmrath.sapp</groupId>
            <artifactId>sapp-db</artifactId>
        </dependency>
        <dependency>
            <groupId>com.mmrath.sapp</groupId>
            <artifactId>sapp-domain</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.validation</groupId>
            <artifactId>validation-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
